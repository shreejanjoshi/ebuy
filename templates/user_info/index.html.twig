{% extends 'base.html.twig' %}

{% block title %}Hello UserInfoController!{% endblock %}

{% block body %}

<br>
<div class="container">
<h2>My Info</h2>
<br>
<table class="table table-striped">
    <tbody>
        <tr>
            <td>First name</td>
            <td>{{app.user.firstName}}</td>
        </tr>
        <tr>
            <td>Last name</td>
            <td>{{app.user.lastName}}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{app.user.email}}</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>{{app.user.country}}</td>
        </tr>
        <tr>
            <td>City</td>
            <td>{{app.user.city}}</td>
        </tr>
        <tr>
            <td>Postcode</td>
            <td>{{app.user.postCode}}</td>
        </tr>
        <tr>
            <td>Street name and number</td>
            <td>{{app.user.addressLine}}</td>
        </tr>
    </tbody>
</table>
</div>
{% endblock %}
